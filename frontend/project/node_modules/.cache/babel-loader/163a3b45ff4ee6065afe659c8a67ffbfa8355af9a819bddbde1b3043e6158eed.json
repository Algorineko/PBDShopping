{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nimport \"core-js/modules/es.iterator.find.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nimport { ref, onMounted } from 'vue';\nimport { ElMessage } from 'element-plus';\nexport default {\n  __name: 'UserReviews',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const reviews = ref([]);\n    const editDialogVisible = ref(false);\n    const editingReview = ref({});\n    const loadReviews = () => {\n      const savedReviews = JSON.parse(localStorage.getItem('productReviews') || '[]');\n\n      // 获取所有订单数据\n      const orders = JSON.parse(localStorage.getItem('orders') || '[]');\n\n      // 为评价数据添加完整的商品信息\n      reviews.value = savedReviews.map(review => {\n        // 查找对应的订单\n        const order = orders.find(o => o.orderId === review.orderId);\n        if (order) {\n          // 找到评价对应的商品\n          const reviewedItem = order.items.find(item => item.id === review.productId);\n          if (reviewedItem) {\n            // 为评价记录添加完整的商品列表\n            return {\n              ...review,\n              // 保存完整的商品列表\n              items: order.items.map(item => ({\n                ...item,\n                // 标记当前评价的商品\n                isReviewed: item.id === review.productId\n              }))\n            };\n          }\n        }\n\n        // 如果没有找到匹配的订单或商品，返回原始评价数据\n        return {\n          ...review,\n          items: [{\n            name: '商品信息缺失',\n            price: 0,\n            quantity: 1,\n            image: '/placeholder-product.jpg'\n          }]\n        };\n      });\n    };\n    const editReview = review => {\n      // 仅克隆需要编辑的数据\n      editingReview.value = {\n        orderId: review.orderId,\n        productId: review.productId,\n        rating: review.rating,\n        content: review.content\n      };\n      editDialogVisible.value = true;\n    };\n    const deleteReview = review => {\n      const newReviews = JSON.parse(localStorage.getItem('productReviews') || []).filter(r => !(r.orderId === review.orderId && r.productId === review.productId));\n      localStorage.setItem('productReviews', JSON.stringify(newReviews));\n      loadReviews();\n      ElMessage.success('删除成功');\n    };\n    const saveEdit = () => {\n      const newReviews = JSON.parse(localStorage.getItem('productReviews') || []);\n      const index = newReviews.findIndex(r => r.orderId === editingReview.value.orderId && r.productId === editingReview.value.productId);\n      if (index > -1) {\n        // 只更新评价内容，不修改商品信息\n        newReviews[index] = {\n          ...newReviews[index],\n          rating: editingReview.value.rating,\n          content: editingReview.value.content,\n          date: new Date().toLocaleString()\n        };\n        localStorage.setItem('productReviews', JSON.stringify(newReviews));\n        ElMessage.success('修改成功');\n        editDialogVisible.value = false;\n        loadReviews();\n      }\n    };\n    onMounted(loadReviews);\n    const __returned__ = {\n      reviews,\n      editDialogVisible,\n      editingReview,\n      loadReviews,\n      editReview,\n      deleteReview,\n      saveEdit,\n      ref,\n      onMounted,\n      get ElMessage() {\n        return ElMessage;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","ElMessage","reviews","editDialogVisible","editingReview","loadReviews","savedReviews","JSON","parse","localStorage","getItem","orders","value","map","review","order","find","o","orderId","reviewedItem","items","item","id","productId","isReviewed","name","price","quantity","image","editReview","rating","content","deleteReview","newReviews","filter","r","setItem","stringify","success","saveEdit","index","findIndex","date","Date","toLocaleString"],"sources":["E:/实验例子/project/src/components/UserReviews.vue"],"sourcesContent":["<template>\r\n  <div class=\"user-reviews\">\r\n    <h2>评价管理</h2>\r\n    \r\n    <el-table :data=\"reviews\" border style=\"width: 100%\">\r\n      <el-table-column prop=\"orderId\" label=\"订单ID\" width=\"120\" />\r\n      \r\n      <el-table-column label=\"商品信息\">\r\n        <template #default=\"{ row }\">\r\n          <div class=\"product-list\">\r\n            <div v-for=\"(item, index) in row.items\" :key=\"index\" class=\"product-item\">\r\n              <el-image \r\n                :src=\"item.image || '/placeholder-product.jpg'\"\r\n                style=\"width: 60px; height: 60px;\"\r\n                fit=\"cover\"\r\n              />\r\n              <div class=\"product-details\">\r\n                <div class=\"product-name\">{{ item.name || '商品信息缺失' }}</div>\r\n                <div class=\"product-price\">¥{{ (item.price || 0).toFixed(2) }} × {{ item.quantity || 1 }}</div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </template>\r\n      </el-table-column>\r\n      \r\n      <el-table-column label=\"评分\" width=\"120\">\r\n        <template #default=\"scope\">\r\n          <el-rate \r\n            v-model=\"scope.row.rating\"\r\n            disabled\r\n            show-score\r\n            text-color=\"#ff9900\"\r\n          />\r\n        </template>\r\n      </el-table-column>\r\n      \r\n      <el-table-column prop=\"content\" label=\"评价内容\" />\r\n      \r\n      <el-table-column prop=\"date\" label=\"评价时间\" width=\"180\" />\r\n      \r\n      <el-table-column label=\"操作\" width=\"150\">\r\n        <template #default=\"{ row }\">\r\n          <el-button size=\"small\" @click=\"editReview(row)\">编辑</el-button>\r\n          <el-button type=\"danger\" size=\"small\" @click=\"deleteReview(row)\">删除</el-button>\r\n        </template>\r\n      </el-table-column>\r\n    </el-table>\r\n\r\n    <el-empty \r\n      v-if=\"reviews.length === 0\" \r\n      description=\"暂无评价记录\"\r\n      class=\"empty-tip\"\r\n    />\r\n\r\n    <!-- 编辑对话框 -->\r\n    <el-dialog v-model=\"editDialogVisible\" title=\"编辑评价\">\r\n      <el-form :model=\"editingReview\">\r\n        <el-form-item label=\"评分\">\r\n          <el-rate v-model=\"editingReview.rating\" />\r\n        </el-form-item>\r\n        <el-form-item label=\"评价内容\">\r\n          <el-input\r\n            v-model=\"editingReview.content\"\r\n            type=\"textarea\"\r\n            :rows=\"4\"\r\n          />\r\n        </el-form-item>\r\n      </el-form>\r\n      <template #footer>\r\n        <el-button @click=\"editDialogVisible = false\">取消</el-button>\r\n        <el-button type=\"primary\" @click=\"saveEdit\">保存</el-button>\r\n      </template>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, onMounted } from 'vue'\r\nimport { ElMessage } from 'element-plus'\r\n\r\nconst reviews = ref([])\r\nconst editDialogVisible = ref(false)\r\nconst editingReview = ref({})\r\n\r\nconst loadReviews = () => {\r\n  const savedReviews = JSON.parse(localStorage.getItem('productReviews') || '[]')\r\n  \r\n  // 获取所有订单数据\r\n  const orders = JSON.parse(localStorage.getItem('orders') || '[]')\r\n  \r\n  // 为评价数据添加完整的商品信息\r\n  reviews.value = savedReviews.map(review => {\r\n    // 查找对应的订单\r\n    const order = orders.find(o => o.orderId === review.orderId)\r\n    \r\n    if (order) {\r\n      // 找到评价对应的商品\r\n      const reviewedItem = order.items.find(item => item.id === review.productId)\r\n      \r\n      if (reviewedItem) {\r\n        // 为评价记录添加完整的商品列表\r\n        return {\r\n          ...review,\r\n          // 保存完整的商品列表\r\n          items: order.items.map(item => ({\r\n            ...item,\r\n            // 标记当前评价的商品\r\n            isReviewed: item.id === review.productId\r\n          }))\r\n        }\r\n      }\r\n    }\r\n    \r\n    // 如果没有找到匹配的订单或商品，返回原始评价数据\r\n    return {\r\n      ...review,\r\n      items: [{\r\n        name: '商品信息缺失',\r\n        price: 0,\r\n        quantity: 1,\r\n        image: '/placeholder-product.jpg'\r\n      }]\r\n    }\r\n  })\r\n}\r\n\r\nconst editReview = (review) => {\r\n  // 仅克隆需要编辑的数据\r\n  editingReview.value = { \r\n    orderId: review.orderId,\r\n    productId: review.productId,\r\n    rating: review.rating,\r\n    content: review.content\r\n  }\r\n  editDialogVisible.value = true\r\n}\r\n\r\nconst deleteReview = (review) => {\r\n  const newReviews = JSON.parse(localStorage.getItem('productReviews') || [])\r\n    .filter(r => !(r.orderId === review.orderId && r.productId === review.productId))\r\n  localStorage.setItem('productReviews', JSON.stringify(newReviews))\r\n  loadReviews()\r\n  ElMessage.success('删除成功')\r\n}\r\n\r\nconst saveEdit = () => {\r\n  const newReviews = JSON.parse(localStorage.getItem('productReviews') || [])\r\n  const index = newReviews.findIndex(r => \r\n    r.orderId === editingReview.value.orderId && \r\n    r.productId === editingReview.value.productId\r\n  )\r\n  \r\n  if (index > -1) {\r\n    // 只更新评价内容，不修改商品信息\r\n    newReviews[index] = {\r\n      ...newReviews[index],\r\n      rating: editingReview.value.rating,\r\n      content: editingReview.value.content,\r\n      date: new Date().toLocaleString()\r\n    }\r\n    \r\n    localStorage.setItem('productReviews', JSON.stringify(newReviews))\r\n    ElMessage.success('修改成功')\r\n    editDialogVisible.value = false\r\n    loadReviews()\r\n  }\r\n}\r\n\r\nonMounted(loadReviews)\r\n</script>\r\n\r\n<style scoped>\r\n.user-reviews {\r\n  padding: 20px;\r\n  background: #fff;\r\n}\r\n\r\n.empty-tip {\r\n  margin-top: 50px;\r\n}\r\n\r\n.product-list {\r\n  padding: 10px 0;\r\n}\r\n\r\n.product-item {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 10px;\r\n  padding: 10px 0;\r\n  border-bottom: 1px solid #eee;\r\n}\r\n\r\n.product-item:last-child {\r\n  border-bottom: none;\r\n}\r\n\r\n.product-details {\r\n  flex: 1;\r\n}\r\n\r\n.product-name {\r\n  font-weight: 500;\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.product-price {\r\n  color: #f56c6c;\r\n  font-size: 14px;\r\n}\r\n\r\n/* 高亮显示被评价的商品 */\r\n.reviewed-item {\r\n  background-color: #f0f9ff;\r\n  border-left: 3px solid #409eff;\r\n  padding-left: 8px;\r\n}\r\n</style>"],"mappings":";;;;AA6EA,SAASA,GAAG,EAAEC,SAAS,QAAQ,KAAK;AACpC,SAASC,SAAS,QAAQ,cAAc;;;;;;;IAExC,MAAMC,OAAO,GAAGH,GAAG,CAAC,EAAE,CAAC;IACvB,MAAMI,iBAAiB,GAAGJ,GAAG,CAAC,KAAK,CAAC;IACpC,MAAMK,aAAa,GAAGL,GAAG,CAAC,CAAC,CAAC,CAAC;IAE7B,MAAMM,WAAW,GAAGA,CAAA,KAAM;MACxB,MAAMC,YAAY,GAAGC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,gBAAgB,CAAC,IAAI,IAAI,CAAC;;MAE/E;MACA,MAAMC,MAAM,GAAGJ,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,QAAQ,CAAC,IAAI,IAAI,CAAC;;MAEjE;MACAR,OAAO,CAACU,KAAK,GAAGN,YAAY,CAACO,GAAG,CAACC,MAAM,IAAI;QACzC;QACA,MAAMC,KAAK,GAAGJ,MAAM,CAACK,IAAI,CAACC,CAAC,IAAIA,CAAC,CAACC,OAAO,KAAKJ,MAAM,CAACI,OAAO,CAAC;QAE5D,IAAIH,KAAK,EAAE;UACT;UACA,MAAMI,YAAY,GAAGJ,KAAK,CAACK,KAAK,CAACJ,IAAI,CAACK,IAAI,IAAIA,IAAI,CAACC,EAAE,KAAKR,MAAM,CAACS,SAAS,CAAC;UAE3E,IAAIJ,YAAY,EAAE;YAChB;YACA,OAAO;cACL,GAAGL,MAAM;cACT;cACAM,KAAK,EAAEL,KAAK,CAACK,KAAK,CAACP,GAAG,CAACQ,IAAI,KAAK;gBAC9B,GAAGA,IAAI;gBACP;gBACAG,UAAU,EAAEH,IAAI,CAACC,EAAE,KAAKR,MAAM,CAACS;cACjC,CAAC,CAAC;YACJ,CAAC;UACH;QACF;;QAEA;QACA,OAAO;UACL,GAAGT,MAAM;UACTM,KAAK,EAAE,CAAC;YACNK,IAAI,EAAE,QAAQ;YACdC,KAAK,EAAE,CAAC;YACRC,QAAQ,EAAE,CAAC;YACXC,KAAK,EAAE;UACT,CAAC;QACH,CAAC;MACH,CAAC,CAAC;IACJ,CAAC;IAED,MAAMC,UAAU,GAAIf,MAAM,IAAK;MAC7B;MACAV,aAAa,CAACQ,KAAK,GAAG;QACpBM,OAAO,EAAEJ,MAAM,CAACI,OAAO;QACvBK,SAAS,EAAET,MAAM,CAACS,SAAS;QAC3BO,MAAM,EAAEhB,MAAM,CAACgB,MAAM;QACrBC,OAAO,EAAEjB,MAAM,CAACiB;MAClB,CAAC;MACD5B,iBAAiB,CAACS,KAAK,GAAG,IAAI;IAChC,CAAC;IAED,MAAMoB,YAAY,GAAIlB,MAAM,IAAK;MAC/B,MAAMmB,UAAU,GAAG1B,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,gBAAgB,CAAC,IAAI,EAAE,CAAC,CACxEwB,MAAM,CAACC,CAAC,IAAI,EAAEA,CAAC,CAACjB,OAAO,KAAKJ,MAAM,CAACI,OAAO,IAAIiB,CAAC,CAACZ,SAAS,KAAKT,MAAM,CAACS,SAAS,CAAC,CAAC;MACnFd,YAAY,CAAC2B,OAAO,CAAC,gBAAgB,EAAE7B,IAAI,CAAC8B,SAAS,CAACJ,UAAU,CAAC,CAAC;MAClE5B,WAAW,CAAC,CAAC;MACbJ,SAAS,CAACqC,OAAO,