{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nimport { ref, onMounted } from 'vue';\nimport { useRoute } from 'vue-router';\nimport { ElMessage } from 'element-plus';\nimport { useCartStore } from '@/stores/cart';\nexport default {\n  __name: 'ProductDetail',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const route = useRoute();\n    const cartStore = useCartStore();\n    const product = ref({\n      id: '',\n      name: '加载中...',\n      price: 0,\n      // 确保初始化为数字类型\n      inventory: 0,\n      mainPictures: [],\n      detailDesc: ''\n    });\n    const quantity = ref(1);\n\n    // 价格格式化方法\n    const formatPrice = price => {\n      return Number(price || 0).toFixed(2);\n    };\n    const fetchProductDetail = async id => {\n      try {\n        const response = await fetch(`http://pcapi-xiaotuxian-front-devtest.itheima.net/goods?id=${id}`);\n        const res = await response.json();\n        if (res.code !== '1') throw new Error(res.msg || '商品加载失败');\n\n        // 确保price为数字类型\n        product.value = {\n          id: res.result.id,\n          name: res.result.name || '未知商品',\n          price: Number(res.result.price || 0),\n          // 移除toFixed保持数字类型\n          inventory: res.result.inventory || 0,\n          mainPictures: (res.result.mainPictures || []).map(img => img.replace(/(?<=\\.(jpg|png|jpeg))\\?.*$/, '')),\n          detailDesc: res.result.details?.properties?.[0]?.value || ''\n        };\n      } catch (error) {\n        ElMessage.error(error.message);\n      }\n    };\n    const addToCart = () => {\n      cartStore.addItem({\n        id: product.value.id,\n        name: product.value.name,\n        price: product.value.price,\n        // 已经是数字类型\n        quantity: quantity.value,\n        image: product.value.mainPictures[0] || '/placeholder-product.jpg'\n      });\n      ElMessage.success('已加入购物车');\n    };\n    onMounted(() => {\n      const productId = route.params.id;\n      if (productId) fetchProductDetail(productId);\n    });\n    const __returned__ = {\n      route,\n      cartStore,\n      product,\n      quantity,\n      formatPrice,\n      fetchProductDetail,\n      addToCart,\n      ref,\n      onMounted,\n      get useRoute() {\n        return useRoute;\n      },\n      get ElMessage() {\n        return ElMessage;\n      },\n      get useCartStore() {\n        return useCartStore;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","useRoute","ElMessage","useCartStore","route","cartStore","product","id","name","price","inventory","mainPictures","detailDesc","quantity","formatPrice","Number","toFixed","fetchProductDetail","response","fetch","res","json","code","Error","msg","value","result","map","img","replace","details","properties","error","message","addToCart","addItem","image","success","productId","params"],"sources":["E:/实验例子/project/src/views/Buyer/ProductDetail.vue"],"sourcesContent":["<template>\r\n  <div class=\"product-detail\">\r\n    <el-button type=\"text\" @click=\"$router.go(-1)\">返回</el-button>\r\n    \r\n    <div class=\"detail-content\">\r\n      <el-carousel :interval=\"4000\" height=\"400px\">\r\n        <el-carousel-item \r\n          v-for=\"(img, index) in product.mainPictures\" \r\n          :key=\"index\"\r\n        >\r\n          <el-image \r\n            :src=\"img\" \r\n            fit=\"cover\" \r\n            style=\"width: 100%; height: 100%;\"\r\n            :preview-src-list=\"product.mainPictures\"\r\n          />\r\n        </el-carousel-item>\r\n      </el-carousel>\r\n\r\n      <div class=\"product-info\">\r\n        <h1>{{ product.name || '未知商品' }}</h1>\r\n        <!-- 使用格式化方法显示价格 -->\r\n        <p class=\"price\">¥{{ formatPrice(product.price) }}</p>\r\n        <el-tag type=\"success\">库存 {{ product.inventory || 0 }} 件</el-tag>\r\n        \r\n        <div class=\"action-group\">\r\n          <el-input-number \r\n            v-model=\"quantity\" \r\n            :min=\"1\" \r\n            :max=\"product.inventory\"\r\n          />\r\n          <el-button \r\n            type=\"primary\" \r\n            @click=\"addToCart\"\r\n            :disabled=\"product.inventory === 0\"\r\n          >\r\n            {{ product.inventory > 0 ? '加入购物车' : '已售罄' }}\r\n          </el-button>\r\n        </div>\r\n\r\n        <el-divider />\r\n        <div class=\"description\">\r\n          <h3>商品详情</h3>\r\n          <p>{{ product.detailDesc || '暂无详情描述' }}</p>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, onMounted } from 'vue'\r\nimport { useRoute } from 'vue-router'\r\nimport { ElMessage } from 'element-plus'\r\nimport { useCartStore } from '@/stores/cart'\r\n\r\nconst route = useRoute()\r\nconst cartStore = useCartStore()\r\n\r\nconst product = ref({\r\n  id: '',\r\n  name: '加载中...',\r\n  price: 0, // 确保初始化为数字类型\r\n  inventory: 0,\r\n  mainPictures: [],\r\n  detailDesc: ''\r\n})\r\n\r\nconst quantity = ref(1)\r\n\r\n// 价格格式化方法\r\nconst formatPrice = (price) => {\r\n  return Number(price || 0).toFixed(2)\r\n}\r\n\r\nconst fetchProductDetail = async (id) => {\r\n  try {\r\n    const response = await fetch(\r\n      `http://pcapi-xiaotuxian-front-devtest.itheima.net/goods?id=${id}`\r\n    )\r\n    const res = await response.json()\r\n    if (res.code !== '1') throw new Error(res.msg || '商品加载失败')\r\n    \r\n    // 确保price为数字类型\r\n    product.value = {\r\n      id: res.result.id,\r\n      name: res.result.name || '未知商品',\r\n      price: Number(res.result.price || 0), // 移除toFixed保持数字类型\r\n      inventory: res.result.inventory || 0,\r\n      mainPictures: (res.result.mainPictures || []).map(img => \r\n        img.replace(/(?<=\\.(jpg|png|jpeg))\\?.*$/, '')\r\n      ),\r\n      detailDesc: res.result.details?.properties?.[0]?.value || ''\r\n    }\r\n  } catch (error) {\r\n    ElMessage.error(error.message)\r\n  }\r\n}\r\n\r\nconst addToCart = () => {\r\n  cartStore.addItem({\r\n    id: product.value.id,\r\n    name: product.value.name,\r\n    price: product.value.price, // 已经是数字类型\r\n    quantity: quantity.value,\r\n    image: product.value.mainPictures[0] || '/placeholder-product.jpg'\r\n  })\r\n  ElMessage.success('已加入购物车')\r\n}\r\n\r\nonMounted(() => {\r\n  const productId = route.params.id\r\n  if (productId) fetchProductDetail(productId)\r\n})\r\n</script>\r\n\r\n<style scoped>\r\n/* 样式保持不变 */\r\n.detail-content {\r\n  max-width: 1200px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n  display: grid;\r\n  grid-template-columns: 1fr 1fr;\r\n  gap: 40px;\r\n}\r\n\r\n.action-group {\r\n  margin-top: 30px;\r\n  display: flex;\r\n  gap: 20px;\r\n  align-items: center;\r\n}\r\n\r\n.description {\r\n  margin-top: 30px;\r\n}\r\n\r\n.el-carousel__item {\r\n  background-color: #f5f7fa;\r\n}\r\n</style>"],"mappings":";;AAmDA,SAASA,GAAG,EAAEC,SAAS,QAAQ,KAAK;AACpC,SAASC,QAAQ,QAAQ,YAAY;AACrC,SAASC,SAAS,QAAQ,cAAc;AACxC,SAASC,YAAY,QAAQ,eAAe;;;;;;;IAE5C,MAAMC,KAAK,GAAGH,QAAQ,CAAC,CAAC;IACxB,MAAMI,SAAS,GAAGF,YAAY,CAAC,CAAC;IAEhC,MAAMG,OAAO,GAAGP,GAAG,CAAC;MAClBQ,EAAE,EAAE,EAAE;MACNC,IAAI,EAAE,QAAQ;MACdC,KAAK,EAAE,CAAC;MAAE;MACVC,SAAS,EAAE,CAAC;MACZC,YAAY,EAAE,EAAE;MAChBC,UAAU,EAAE;IACd,CAAC,CAAC;IAEF,MAAMC,QAAQ,GAAGd,GAAG,CAAC,CAAC,CAAC;;IAEvB;IACA,MAAMe,WAAW,GAAIL,KAAK,IAAK;MAC7B,OAAOM,MAAM,CAACN,KAAK,IAAI,CAAC,CAAC,CAACO,OAAO,CAAC,CAAC,CAAC;IACtC,CAAC;IAED,MAAMC,kBAAkB,GAAG,MAAOV,EAAE,IAAK;MACvC,IAAI;QACF,MAAMW,QAAQ,GAAG,MAAMC,KAAK,CAC1B,8DAA8DZ,EAAE,EAClE,CAAC;QACD,MAAMa,GAAG,GAAG,MAAMF,QAAQ,CAACG,IAAI,CAAC,CAAC;QACjC,IAAID,GAAG,CAACE,IAAI,KAAK,GAAG,EAAE,MAAM,IAAIC,KAAK,CAACH,GAAG,CAACI,GAAG,IAAI,QAAQ,CAAC;;QAE1D;QACAlB,OAAO,CAACmB,KAAK,GAAG;UACdlB,EAAE,EAAEa,GAAG,CAACM,MAAM,CAACnB,EAAE;UACjBC,IAAI,EAAEY,GAAG,CAACM,MAAM,CAAClB,IAAI,IAAI,MAAM;UAC/BC,KAAK,EAAEM,MAAM,CAACK,GAAG,CAACM,MAAM,CAA