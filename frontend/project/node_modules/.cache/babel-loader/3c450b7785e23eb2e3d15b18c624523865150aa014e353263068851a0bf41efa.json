{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nimport { ref, onMounted } from 'vue';\nimport { ElMessage } from 'element-plus';\nexport default {\n  __name: 'UserReviews',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const reviews = ref([]);\n    const editDialogVisible = ref(false);\n    const editingReview = ref({});\n    const loadReviews = () => {\n      const savedReviews = JSON.parse(localStorage.getItem('productReviews') || '[]');\n\n      // 为评价数据添加完整的商品信息 - 使用商品快照\n      reviews.value = savedReviews.map(review => {\n        // 确保商品信息存在\n        const itemInfo = review.itemSnapshot || {};\n        return {\n          ...review,\n          item: {\n            id: itemInfo.id || review.productId || 0,\n            name: itemInfo.name || '商品信息缺失',\n            price: itemInfo.price || 0,\n            quantity: itemInfo.quantity || 1,\n            image: itemInfo.image || '/placeholder-product.jpg'\n          }\n        };\n      });\n    };\n    const editReview = review => {\n      // 仅克隆需要编辑的数据\n      editingReview.value = {\n        orderId: review.orderId,\n        productId: review.item.id,\n        rating: review.rating,\n        content: review.content\n      };\n      editDialogVisible.value = true;\n    };\n    const deleteReview = review => {\n      const newReviews = JSON.parse(localStorage.getItem('productReviews') || '[]').filter(r => !(r.orderId === review.orderId && r.productId === review.item.id));\n      localStorage.setItem('productReviews', JSON.stringify(newReviews));\n\n      // 更新订单中该商品的评价状态\n      const savedOrders = JSON.parse(localStorage.getItem('orders') || '[]');\n      const updatedOrders = savedOrders.map(order => {\n        if (order.orderId == review.orderId) {\n          const updatedItems = order.items.map(item => {\n            if (item.id == review.item.id) {\n              return {\n                ...item,\n                reviewed: false\n              };\n            }\n            return item;\n          });\n          return {\n            ...order,\n            items: updatedItems\n          };\n        }\n        return order;\n      });\n      localStorage.setItem('orders', JSON.stringify(updatedOrders));\n      loadReviews();\n      ElMessage.success('删除成功');\n    };\n    const saveEdit = () => {\n      const newReviews = JSON.parse(localStorage.getItem('productReviews') || '[]');\n      const index = newReviews.findIndex(r => r.orderId === editingReview.value.orderId && r.productId === editingReview.value.productId);\n      if (index > -1) {\n        // 只更新评价内容，保留商品快照\n        newReviews[index] = {\n          ...newReviews[index],\n          rating: editingReview.value.rating,\n          content: editingReview.value.content,\n          date: new Date().toLocaleString()\n        };\n        localStorage.setItem('productReviews', JSON.stringify(newReviews));\n        ElMessage.success('修改成功');\n        editDialogVisible.value = false;\n        loadReviews();\n      }\n    };\n    onMounted(loadReviews);\n    const __returned__ = {\n      reviews,\n      editDialogVisible,\n      editingReview,\n      loadReviews,\n      editReview,\n      deleteReview,\n      saveEdit,\n      ref,\n      onMounted,\n      get ElMessage() {\n        return ElMessage;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","onMounted","ElMessage","reviews","editDialogVisible","editingReview","loadReviews","savedReviews","JSON","parse","localStorage","getItem","value","map","review","itemInfo","itemSnapshot","item","id","productId","name","price","quantity","image","editReview","orderId","rating","content","deleteReview","newReviews","filter","r","setItem","stringify","savedOrders","updatedOrders","order","updatedItems","items","reviewed","success","saveEdit","index","findIndex","date","Date","toLocaleString"],"sources":["E:/实验例子/project/src/components/UserReviews.vue"],"sourcesContent":["<template>\r\n  <div class=\"user-reviews\">\r\n    <h2>评价管理</h2>\r\n    \r\n    <el-table :data=\"reviews\" border style=\"width: 100%\">\r\n      <el-table-column prop=\"orderId\" label=\"订单ID\" width=\"120\" />\r\n      \r\n      <el-table-column label=\"商品信息\">\r\n        <template #default=\"{ row }\">\r\n          <div class=\"product-list\">\r\n            <div class=\"product-item\">\r\n              <router-link :to=\"`/buyer/product/${row.item.id}`\">\r\n                <el-image \r\n                  :src=\"row.item.image || '/placeholder-product.jpg'\"\r\n                  style=\"width: 60px; height: 60px;\"\r\n                  fit=\"cover\"\r\n                />\r\n              </router-link>\r\n              <div class=\"product-details\">\r\n                <router-link :to=\"`/buyer/product/${row.item.id}`\" class=\"product-name\">\r\n                  {{ row.item.name || '商品信息缺失' }}\r\n                </router-link>\r\n                <div class=\"product-price\">¥{{ (row.item.price || 0).toFixed(2) }} × {{ row.item.quantity || 1 }}</div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </template>\r\n      </el-table-column>\r\n      \r\n      <el-table-column label=\"评分\" width=\"120\">\r\n        <template #default=\"scope\">\r\n          <el-rate \r\n            v-model=\"scope.row.rating\"\r\n            disabled\r\n            show-score\r\n            text-color=\"#ff9900\"\r\n          />\r\n        </template>\r\n      </el-table-column>\r\n      \r\n      <el-table-column prop=\"content\" label=\"评价内容\" />\r\n      \r\n      <el-table-column prop=\"date\" label=\"评价时间\" width=\"180\" />\r\n      \r\n      <el-table-column label=\"操作\" width=\"150\">\r\n        <template #default=\"{ row }\">\r\n          <el-button size=\"small\" @click=\"editReview(row)\">编辑</el-button>\r\n          <el-button type=\"danger\" size=\"small\" @click=\"deleteReview(row)\">删除</el-button>\r\n        </template>\r\n      </el-table-column>\r\n    </el-table>\r\n\r\n    <el-empty \r\n      v-if=\"reviews.length === 0\" \r\n      description=\"暂无评价记录\"\r\n      class=\"empty-tip\"\r\n    />\r\n\r\n    <!-- 编辑对话框 -->\r\n    <el-dialog v-model=\"editDialogVisible\" title=\"编辑评价\">\r\n      <el-form :model=\"editingReview\">\r\n        <el-form-item label=\"评分\">\r\n          <el-rate v-model=\"editingReview.rating\" />\r\n        </el-form-item>\r\n        <el-form-item label=\"评价内容\">\r\n          <el-input\r\n            v-model=\"editingReview.content\"\r\n            type=\"textarea\"\r\n            :rows=\"4\"\r\n          />\r\n        </el-form-item>\r\n      </el-form>\r\n      <template #footer>\r\n        <el-button @click=\"editDialogVisible = false\">取消</el-button>\r\n        <el-button type=\"primary\" @click=\"saveEdit\">保存</el-button>\r\n      </template>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, onMounted } from 'vue'\r\nimport { ElMessage } from 'element-plus'\r\n\r\nconst reviews = ref([])\r\nconst editDialogVisible = ref(false)\r\nconst editingReview = ref({})\r\n\r\nconst loadReviews = () => {\r\n  const savedReviews = JSON.parse(localStorage.getItem('productReviews') || '[]')\r\n  \r\n  // 为评价数据添加完整的商品信息 - 使用商品快照\r\n  reviews.value = savedReviews.map(review => {\r\n    // 确保商品信息存在\r\n    const itemInfo = review.itemSnapshot || {}\r\n    \r\n    return {\r\n      ...review,\r\n      item: {\r\n        id: itemInfo.id || review.productId || 0,\r\n        name: itemInfo.name || '商品信息缺失',\r\n        price: itemInfo.price || 0,\r\n        quantity: itemInfo.quantity || 1,\r\n        image: itemInfo.image || '/placeholder-product.jpg'\r\n      }\r\n    }\r\n  })\r\n}\r\n\r\nconst editReview = (review) => {\r\n  // 仅克隆需要编辑的数据\r\n  editingReview.value = { \r\n    orderId: review.orderId,\r\n    productId: review.item.id,\r\n    rating: review.rating,\r\n    content: review.content\r\n  }\r\n  editDialogVisible.value = true\r\n}\r\n\r\nconst deleteReview = (review) => {\r\n  const newReviews = JSON.parse(localStorage.getItem('productReviews') || '[]')\r\n    .filter(r => !(r.orderId === review.orderId && r.productId === review.item.id))\r\n  localStorage.setItem('productReviews', JSON.stringify(newReviews))\r\n  \r\n  // 更新订单中该商品的评价状态\r\n  const savedOrders = JSON.parse(localStorage.getItem('orders') || '[]')\r\n  const updatedOrders = savedOrders.map(order => {\r\n    if (order.orderId == review.orderId) {\r\n      const updatedItems = order.items.map(item => {\r\n        if (item.id == review.item.id) {\r\n          return { ...item, reviewed: false }\r\n        }\r\n        return item\r\n      })\r\n      return { ...order, items: updatedItems }\r\n    }\r\n    return order\r\n  })\r\n  \r\n  localStorage.setItem('orders', JSON.stringify(updatedOrders))\r\n  \r\n  loadReviews()\r\n  ElMessage.success('删除成功')\r\n}\r\n\r\nconst saveEdit = () => {\r\n  const newReviews = JSON.parse(localStorage.getItem('productReviews') || '[]')\r\n  const index = newReviews.findIndex(r => \r\n    r.orderId === editingReview.value.orderId && \r\n    r.productId === editingReview.value.productId\r\n  )\r\n  \r\n  if (index > -1) {\r\n    // 只更新评价内容，保留商品快照\r\n    newReviews[index] = {\r\n      ...newReviews[index],\r\n      rating: editingReview.value.rating,\r\n      content: editingReview.value.content,\r\n      date: new Date().toLocaleString()\r\n    }\r\n    \r\n    localStorage.setItem('productReviews', JSON.stringify(newReviews))\r\n    ElMessage.success('修改成功')\r\n    editDialogVisible.value = false\r\n    loadReviews()\r\n  }\r\n}\r\n\r\nonMounted(loadReviews)\r\n</script>\r\n\r\n<style scoped>\r\n.user-reviews {\r\n  padding: 20px;\r\n  background: #fff;\r\n}\r\n\r\n.empty-tip {\r\n  margin-top: 50px;\r\n}\r\n\r\n.product-list {\r\n  padding: 10px 0;\r\n}\r\n\r\n.product-item {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 10px;\r\n  padding: 10px 0;\r\n}\r\n\r\n.product-details {\r\n  flex: 1;\r\n}\r\n\r\n.product-name {\r\n  font-weight: 500;\r\n  margin-bottom: 5px;\r\n  color: #606266;\r\n  text-decoration: none;\r\n  display: block;\r\n  cursor: pointer;\r\n  transition: color 0.3s;\r\n}\r\n\r\n.product-name:hover {\r\n  color: #409eff;\r\n  text-decoration: underline;\r\n}\r\n\r\n.product-price {\r\n  color: #f56c6c;\r\n  font-size: 14px;\r\n}\r\n\r\n/* 图片链接样式 */\r\na {\r\n  text-decoration: none;\r\n  color: inherit;\r\n}\r\n\r\n/* 图片悬停效果 */\r\n.el-image {\r\n  transition: transform 0.3s;\r\n}\r\n\r\n.el-image:hover {\r\n  transform: scale(1.05);\r\n}\r\n</style>"],"mappings":";;;AAiFA,SAASA,GAAG,EAAEC,SAAS,QAAQ,KAAK;AACpC,SAASC,SAAS,QAAQ,cAAc;;;;;;;IAExC,MAAMC,OAAO,GAAGH,GAAG,CAAC,EAAE,CAAC;IACvB,MAAMI,iBAAiB,GAAGJ,GAAG,CAAC,KAAK,CAAC;IACpC,MAAMK,aAAa,GAAGL,GAAG,CAAC,CAAC,CAAC,CAAC;IAE7B,MAAMM,WAAW,GAAGA,CAAA,KAAM;MACxB,MAAMC,YAAY,GAAGC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,gBAAgB,CAAC,IAAI,IAAI,CAAC;;MAE/E;MACAR,OAAO,CAACS,KAAK,GAAGL,YAAY,CAACM,GAAG,CAACC,MAAM,IAAI;QACzC;QACA,MAAMC,QAAQ,GAAGD,MAAM,CAACE,YAAY,IAAI,CAAC,CAAC;QAE1C,OAAO;UACL,GAAGF,MAAM;UACTG,IAAI,EAAE;YACJC,EAAE,EAAEH,QAAQ,CAACG,EAAE,IAAIJ,MAAM,CAACK,SAAS,IAAI,CAAC;YACxCC,IAAI,EAAEL,QAAQ,CAACK,IAAI,IAAI,QAAQ;YAC/BC,KAAK,EAAEN,QAAQ,CAACM,KAAK,IAAI,CAAC;YAC1BC,QAAQ,EAAEP,QAAQ,CAACO,QAAQ,IAAI,CAAC;YAChCC,KAAK,EAAER,QAAQ,CAACQ,KAAK,IAAI;UAC3B;QACF,CAAC;MACH,CAAC,CAAC;IACJ,CAAC;IAED,MAAMC,UAAU,GAAIV,MAAM,IAAK;MAC7B;MACAT,aAAa,CAACO,KAAK,GAAG;QACpBa,OAAO,EAAEX,MAAM,CAACW,OAAO;QACvBN,SAAS,EAAEL,MAAM,CAACG,IAAI,CAACC,EAAE;QACzBQ,MAAM,EAAEZ,MAAM,CAACY,MAAM;QACrBC,OAAO,EAAEb,MAAM,CAACa;MAClB,CAAC;MACDvB,iBAAiB,CAACQ,KAAK,GAAG,IAAI;IAChC,CAAC;IAED,MAAMgB,YAAY,GAAId,MAAM,IAAK;MAC/B,MAAMe,UAAU,GAAGrB,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,gBAAgB,CAAC,IAAI,IAAI,CAAC,CAC1EmB,MAAM,CAACC,CAAC,IAAI,EAAEA,CA