<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootmybatis.mapper.ProductCategoryMapper">

    <!-- 通用查询字段 -->
    <sql id="Base_Column_List">
        CategoryID, CategoryName, Description, Image
    </sql>

    <!-- 结果映射 -->
    <resultMap id="ProductCategoryResultMap" type="org.example.springbootmybatis.entity.ProductCategory">
        <id property="categoryId" column="CategoryID"/>
        <result property="categoryName" column="CategoryName"/>
        <result property="description" column="Description"/>
        <result property="image" column="Image"/>
    </resultMap>

    <!-- 查询所有商品分类 -->
    <select id="findAll" resultMap="ProductCategoryResultMap">
        select
        <include refid="Base_Column_List"/>
        from productCategory
    </select>

    <!-- 根据ID删除商品分类 -->
    <delete id="deleteById">
        delete from productCategory
        where CategoryID = #{id}
    </delete>

    <!-- 插入商品分类 -->
    <insert id="insert">
        insert into productCategory
        (
        <include refid="Base_Column_List"/>
        )
        values
        (
        #{categoryId},
        #{categoryName},
        #{description},
        #{image}
        )
    </insert>

    <!-- 动态更新商品分类信息 -->
    <update id="update">
        update productCategory
        <set>
            <if test="categoryName != null and categoryName.trim() != ''">
                CategoryName = #{categoryName},
            </if>
            <if test="description != null and description.trim() != ''">
                Description = #{description},
            </if>
            <if test="image != null and image.trim() != ''">
                Image = #{image},
            </if>
        </set>
        where CategoryID = #{categoryId}
    </update>

    <!-- 根据ID查询商品分类 -->
    <select id="findById" resultMap="ProductCategoryResultMap">
        select
        <include refid="Base_Column_List"/>
        from productCategory
        where CategoryID = #{id}
    </select>

</mapper>