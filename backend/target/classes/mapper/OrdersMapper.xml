<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbdcompany.mapper.OrdersMapper">

    <!-- 通用查询字段 -->
    <sql id="Base_Column_List">
    <trim>
        OrderID, CustomerID, TotalPrice, Status
     </trim>
    </sql>

    <!-- 结果映射 -->
    <resultMap id="OrdersResultMap" type="com.pbdcompany.entity.Orders">
        <id property="orderId" column="OrderID"/>
        <result property="customerId" column="CustomerID"/>
        <result property="totalPrice" column="TotalPrice"/>
        <result property="status" column="Status"/>
    </resultMap>

    <!-- 查询所有订单 -->
    <select id="findAll" resultMap="OrdersResultMap">
        select
        <include refid="Base_Column_List"/>
        from orders
    </select>

    <!-- 根据ID删除订单 -->
    <delete id="deleteById">
        delete from orders
        where OrderID = #{id}
    </delete>

    <!-- 插入订单 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="orderId">
        INSERT INTO Orders (<include refid="Base_Column_List"/>)
        VALUES (#{orderId},#{customerId}, #{totalPrice}, #{status})
    </insert>



    <!-- 动态更新订单信息 -->
    <update id="update">
        update orders
        <set>
            <if test="customerId != null">
                CustomerID = #{customerId},
            </if>
            <if test="totalPrice != null">
                TotalPrice = #{totalPrice},
            </if>
            <if test="status != null">
                Status = #{status},
            </if>
        </set>
        where OrderID = #{orderId}
    </update>

    <!-- 根据ID查询订单 -->
    <select id="findById" resultMap="OrdersResultMap">
        select
        <include refid="Base_Column_List"/>
        from orders
        where OrderID = #{id}
    </select>

</mapper>