<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootmybatis.mapper.CustomerMapper">

    <!-- 通用查询字段 -->
    <sql id="Base_Column_List">
        CustomerID, CustomerName, Password, Money, PhoneNumber, Address
    </sql>

    <!-- 结果映射 -->
    <resultMap id="CustomerResultMap" type="org.example.springbootmybatis.entity.Customer">
        <id property="customerId" column="CustomerID"/>
        <result property="customerName" column="CustomerName"/>
        <result property="password" column="Password"/>
        <result property="money" column="Money"/>
        <result property="phoneNumber" column="PhoneNumber"/>
        <result property="address" column="Address"/>
    </resultMap>

    <!-- 查询所有用户 -->
    <select id="findAll" resultMap="CustomerResultMap">
        select
        <include refid="Base_Column_List"/>
        from customer
    </select>

    <!-- 根据ID删除用户 -->
    <delete id="deleteById">
        delete from customer
        where CustomerID = #{id}
    </delete>

    <!-- 插入用户 -->
    <insert id="insert">
        insert into customer
        (
        <include refid="Base_Column_List"/>
        )
        values
        (
        #{customerId},
        #{customerName},
        #{password},
        #{money},
        #{phoneNumber},
        #{address}
        )
    </insert>

    <!-- 动态更新用户信息 -->
    <update id="update">
        update customer
        <set>
            <if test="customerName != null and customerName.trim() != ''">
                CustomerName = #{customerName},
            </if>
            <if test="password != null and password.trim() != ''">
                Password = #{password},
            </if>
            <if test="money != null">
                Money = #{money},
            </if>
            <if test="phoneNumber != null and phoneNumber.trim() != ''">
                PhoneNumber = #{phoneNumber},
            </if>
            <if test="address != null and address.trim() != ''">
                Address = #{address},
            </if>
        </set>
        where CustomerID = #{customerId}
    </update>

    <!-- 根据用户名和密码查询用户 -->
    <select id="findByUsernameAndPassword" resultMap="CustomerResultMap">
        select
        <include refid="Base_Column_List"/>
        from customer
        where CustomerName = #{username} and Password = #{password}
    </select>

</mapper>