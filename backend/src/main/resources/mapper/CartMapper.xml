<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootmybatis.mapper.CartMapper">

    <!-- 通用查询字段 -->
    <sql id="Base_Column_List">
        CartID, CustomerID
    </sql>

    <!-- 结果映射 -->
    <resultMap id="CartResultMap" type="org.example.springbootmybatis.entity.Cart">
        <id property="cartId" column="CartID"/>
        <result property="customerId" column="CustomerID"/>
    </resultMap>

    <!-- 查询所有购物车 -->
    <select id="findAll" resultMap="CartResultMap">
        select
        <include refid="Base_Column_List"/>
        from cart
    </select>

    <!-- 根据ID删除购物车 -->
    <delete id="deleteById">
        delete from cart
        where CartID = #{id}
    </delete>

    <!-- 插入购物车 -->
    <insert id="insert">
        insert into cart
        (
        <include refid="Base_Column_List"/>
        )
        values
        (
        #{cartId},
        #{customerId}
        )
    </insert>

    <!-- 动态更新购物车信息 -->
    <update id="update">
        update cart
        <set>
            <if test="customerId != null">
                CustomerID = #{customerId},
            </if>
        </set>
        where CartID = #{cartId}
    </update>

    <!-- 根据ID查询购物车 -->
    <select id="findById" resultMap="CartResultMap">
        select
        <include refid="Base_Column_List"/>
        from cart
        where CartID = #{id}
    </select>

</mapper>