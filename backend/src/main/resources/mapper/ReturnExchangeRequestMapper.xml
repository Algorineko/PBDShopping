<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootmybatis.mapper.ReturnExchangeRequestMapper">

    <!-- 通用查询字段 -->
    <sql id="Base_Column_List">
        requestId, orderItemId, customerId, requestType, reason, status
    </sql>

    <!-- 结果映射 -->
    <resultMap id="ReturnExchangeRequestResultMap" type="org.example.springbootmybatis.entity.ReturnExchangeRequest">
        <id property="requestId" column="requestId"/>
        <result property="orderItemId" column="orderItemId"/>
        <result property="customerId" column="customerId"/>
        <result property="requestType" column="requestType"/>
        <result property="reason" column="reason"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- 查询所有退换货请求 -->
    <select id="findAll" resultMap="ReturnExchangeRequestResultMap">
        select
        <include refid="Base_Column_List"/>
        from returnExchangeRequest
    </select>

    <!-- 根据ID删除退换货请求 -->
    <delete id="deleteById">
        delete from returnExchangeRequest
        where requestId = #{id}
    </delete>

    <!-- 插入退换货请求 -->
    <insert id="insert">
        insert into returnExchangeRequest
        (
        <include refid="Base_Column_List"/>
        )
        values
        (
        #{requestId},
        #{orderItemId},
        #{customerId},
        #{requestType},
        #{reason},
        #{status}
        )
    </insert>

    <!-- 动态更新退换货请求信息 -->
    <update id="update">
        update returnExchangeRequest
        <set>
            <if test="orderItemId != null">
                orderItemId = #{orderItemId},
            </if>
            <if test="customerId != null">
                customerId = #{customerId},
            </if>
            <if test="requestType != null and requestType.trim() != ''">
                requestType = #{requestType},
            </if>
            <if test="reason != null and reason.trim() != ''">
                reason = #{reason},
            </if>
            <if test="status != null and status.trim() != ''">
                status = #{status},
            </if>
        </set>
        where requestId = #{requestId}
    </update>

    <!-- 根据ID查询退换货请求 -->
    <select id="findById" resultMap="ReturnExchangeRequestResultMap">
        select
        <include refid="Base_Column_List"/>
        from returnExchangeRequest
        where requestId = #{id}
    </select>

</mapper>